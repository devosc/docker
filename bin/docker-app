#!/usr/bin/env bash

source docker-build-env

args=("$@")
directory="$(pwd)"

for ((i=0; i < "${#args[@]}"; ++i)); do
    case ${args[i]} in
        --project-directory )   directory="${args[i+1]}"
                                unset "args[i]"
                                unset "args[i+1]"
                                break
                                ;;
    esac
done

docker-compose --file "${directory}/docker-compose.yml" exec --user ${USER_ID}:${GROUP_ID} app "${args[@]:-bash}"
