#!/usr/bin/env bash

source docker-build-env

file="$(pwd)/docker-compose.yml"

if [ -f $file ]; then
    # remove images
    rmi=""
    if [ "--remove-images" = "$1" ] || [ "--remove-images" = "$2" ]; then
        images=$(docker-compose --file $file images -q)
        if [ "$images" != "" ]; then
            rmi="--rmi local"
        else
            echo -e "\e[1;31mNo project images\e[0m"
        fi
    fi

    # stop project
    docker-compose --file $file down --remove-orphans $rmi;

else
    echo -e "\e[1;31mProject not found\e[0m"
fi

# stop all containers

if [ "-a" = "$1" ] || [ "-a" = "$2" ]; then
    containers=$(docker ps -aq)
    if [ "$containers" != "" ]; then
        echo -e "\e[1;32mRemoving containers\e[0m"
        docker stop $containers
        docker rm $containers
    else
        echo -e "\e[1;31mNo containers\e[0m"
    fi
fi
