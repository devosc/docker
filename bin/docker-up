#!/usr/bin/env bash

export USER_ID=$(id -u)
export GROUP_ID=$(id -g)

# start services
if [ "-a" = "$1" ]; then
    shift
    docker-services up
fi

# build images before starting containers
args=""
if [ "--build" = "$1" ]; then
    args="$1";
fi

docker-compose --file $(pwd)/docker-compose.yml up -d $args
